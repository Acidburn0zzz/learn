#!/bin/sh
#description: edit code of scripting utilities located in the system PATH
#usage: vim-show script

#example: vim-show vim-show
#this
#code
#...

if [ ! -t 0 ]; then
    #there is input comming from pipe or file, add to the end of $@
    set -- $(for arg in "${@}"; do printf "%s\\n" "${arg}"; done) $(cat)
fi

[ "${#}" -eq "0" ] && { printf "%s\\n" "Usage: $(expr "${0}" : '.*/\([^/]*\)') script" >&2; exit 1; }

for arg in "${@}"; do #parse options
    case "${arg}" in
        --) shift; break  ;;
        -h|--help)  { printf "%s\\n" "Usage: $(expr "${0}" : '.*/\([^/]*\)') script" >&2; exit 1; } ;;
        -*) printf "%s\\n" "$(expr "${0}" : '.*/\([^/]*\)'): unrecognized option \`${arg}'" >&2
            printf "%s\\n" "Usage: $(expr "${0}" : '.*/\([^/]*\)') script" >&2
            exit 1 ;;
    esac
done

script="${1}"

if command -v "${script}" >/dev/null 2>&1; then
    [ -z "${EDITOR}" ] && { printf "%s\\n" "$(expr "${0}" : '.*/\([^/]*\)'): variable EDITOR was not found" >&2; exit 1; } 
    ${EDITOR} "$(command -v "${script}" 2>/dev/null)"
else
    printf "$(expr "${0}" : '.*/\([^/]*\)'): %s\\n" "script '${script}' was not found in \$PATH" >&2
    exit 1
fi
